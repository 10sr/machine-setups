{% for proxy in nginx_ssl_host_proxies %}
server {
    listen 443 ssl http2;

    client_max_body_size 0;

    server_name {{ proxy.name }};

    location / {
{% for directive in proxy.additional_directives | default([]) %}
        {{ directive }};
{% endfor %}
        proxy_pass http://localhost:{{ proxy.port }};
    }
}
{% endfor %}
